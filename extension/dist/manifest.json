{
  "manifest_version": 3,
  "name": "Gmail Copilot",
  "version": "1.0.0",
  "description": "AI-powered Gmail assistant for summarizing emails and drafting replies",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_icon": {
      "48": "summarize-icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "summarize-icon.svg",
    "128": "summarize-icon.svg"
  },
  "web_accessible_resources": [{
    "resources": ["summarize-icon.svg", "draft-icon.svg", "*.svg"],
    "matches": ["https://mail.google.com/*"]
  }]
}
